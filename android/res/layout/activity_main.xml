<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"/>

    <ImageView
        android:id="@+id/titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/flappy_bird_logo"/>

    <Button
        android:id="@+id/facil"
        android:layout_below="@id/titulo"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:text="@string/facil"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:background="@color/color_button"
        android:textColor="@color/color_white"
        android:onClick="facil"/>

    <Button
        android:id="@+id/medio"
        android:layout_below="@id/facil"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:text="@string/medio"
        android:layout_marginTop="15dp"
        android:textSize="40sp"
        android:background="@color/color_button"
        android:textColor="@color/color_white"
        android:onClick="medio"/>

    <Button
        android:id="@+id/dificil"
        android:layout_below="@id/medio"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/dificil"
        android:textSize="40sp"
        android:background="@color/color_button"
        android:textColor="@color/color_white"
        android:onClick="dificil"/>

    <Button
        android:id="@+id/song"
        android:layout_below="@id/dificil"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/song"
        android:textSize="40sp"
        android:background="@color/color_button"
        android:textColor="@color/color_white"
        android:onClick="setSound"/>

</RelativeLayout>